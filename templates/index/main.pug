//- declaration
//- carousel輪播的分頁項目
mixin carousel_slide(slide_data)
  .carousel-item.white-text(style="background-image:url('" + slide_data.photo + "')")
    .carousel-teaser-wrapper
      h4
        a(href=slide_data.link)= slide_data.title
      h6= slide_data.lead

//- 最新文章卡片
mixin news_card(card_data)
  .col.m6.l4
    .card.z-depth-0
      .card-image
        img(src=card_data.photo)
      .card-content
        .card-category
          a.waves-effect.waves-light.btn.z-depth-0.kikyo= card_data.category
        h4.card-title
          a(href=card_data.link)= card_data.title

//- 首頁分類區塊 -> 主打文章 + 熱門列表
mixin feature_category(cate_data)
  +section_head(cate_data.name)

  .col.s12.m8
    .slider
      ul.slides
        li
          img(src=cate_data.feature.photo)
          .caption.left-align
            h4= cate_data.feature.title
  .col.m4
    //- 要讓過長的標題變成...結尾，使用overflow:hidden
    //- 於是無法使用 ol 列出項目編號，只好自己用span加入項目編號
    ul.side-list
      each term, index in cate_data.list
        +side_list_item(index+1, term)

//- 首頁分類區塊 -> carousel輪播
mixin carousel_catagory(cate_data)
  +section_head(cate_data.name)

  .section-padding
    .carousel.carousel-slider.center(data-indicators='true')
      each term in cate_data.list
        +carousel_slide(term)

//- 區塊標題
mixin section_head(name)
  .section-head
    h3
      a(href='#')= name

//- 熱門文章列表
mixin side_list_item(num, data)
  li.list-item
    a(href='#')
      span= num
      | #{data}


//- start page with mixin
//- 首頁內容開始
.main-container
  section
    .carousel.carousel-slider.center(data-indicators='true')
      each term in carousel_slides_data
        +carousel_slide(term)

  section.row.new-articles
    each term in news_cards_data
      +news_card(term)

  section.category.row
    +feature_category(feature_category01_data)

  section.category.row
    +feature_category(feature_category02_data)

  section
    +carousel_catagory(carousel_catagory01_data)

  section
    +carousel_catagory(carousel_catagory02_data)

  section.category.row
    +feature_category(feature_category03_data)
