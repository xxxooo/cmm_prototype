//- declaration
mixin main_menu_term(term_data)
  li
    a.wline(href=term_data.link)
      span= term_data.name
      br
      span.font-optima= term_data.eng

mixin side_menu_term(term_data)
  li
    a(href=term_data.link)
      span= term_data.name
      span.font-optima= term_data.eng

//- in use
header.navbar-fixed.page
  a.button-collapse-mid(href='#', data-activates='mobile-slide-out')
    i.material-icons.small menu
  .main-container
    ul#mobile-slide-out.side-nav
      li
        a.brand-logo(href='#')
          img(src='../assets/cmm_img/cmm_logo04.svg')
      li
        a.block(href='#')
          i.material-icons.small person_outline
          | 會員登入
      li
        a.block(href='#')
          i.material-icons.small search
          | 搜尋
      li.divider
      each category in categories_data
        +side_menu_term(category)

  nav.z-depth-0.hide-on-med-and-down
    .left-line
    .nav-wrapper
      .logo-area
        a.brand-logo(href='#')
          img.responsive-img(src='../assets/cmm_img/cmm_logo04.svg')
        .block
          .icon-slash
        a.block(href='#')
          i.material-icons.small person_outline
        a.block(href='#')
          i.material-icons.small search

      ul#nav-mobile.main-menu
        li.placeholder

        each category in categories_data
          +main_menu_term(category)

        li.polyline-end
