header.triback00
  .main-container
    .logo-area
      a.brand-logo(href='#')
        img(src='../assets/cmm_img/cmm_logo04.svg')
      .block.hide-on-small-only
        .icon-slash
      a.block.hide-on-small-only(href='#')
